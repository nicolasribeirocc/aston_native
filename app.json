{
  "expo": {
    "name": "Aston Bank",
    "slug": "aston",
    "scheme": "astonlink",
    "privacy": "unlisted",
    "version": "1.0.2",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#F28B1A"
    },
    "notification": {
      "icon": "./assets/icon.png",
      "color": "#8ac53f",
      "androidMode": "default",
      "androidCollapsedTitle": "AstonBank"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "app.astonbank.com.br",
      "buildNumber": "4",
      "infoPlist": {
        "NSFaceIDUsageDescription": "Acesse o app com sua digital",
        "NSPhotoLibraryUsageDescription": "Precisamos acessar as suas fotos para importar os seus documentos.",
        "NSCameraUsageDescription": "Precisamos acessar a sua camêra para importar os seus documentos.",
        "NSMicrophoneUsageDescription": "Precisamos acessar seu microfone para gravar videos.",
        "NSDownloadsUsageDescription": "Necessário para salvar e compartilhar seus comprovantes"
      }
    },
    "android": {
      "intentFilters": [
        {
          "action": "VIEW",
          "data": [
            {
              "scheme": "astonlink"
            }
          ],
          "category": ["BROWSABLE", "DEFAULT"]
        }
      ],
      "googleServicesFile": "./google-services.json",
      "useNextNotificationsApi": true,
      "package": "app.astonbank.com.br",
      "versionCode": 5,
      "permissions": [
        "USE_BIOMETRIC",
        "USE_FINGERPRINT",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "CAMERA",
        "INTERNET",
        "SYSTEM_ALERT_WINDOWS"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "eas": {
        "projectId": "9f1ced9b-f134-425d-aa59-bdf12b1908ca"
      }
    }
  }
}
